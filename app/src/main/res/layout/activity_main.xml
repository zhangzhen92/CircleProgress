<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:background="#EB7D35"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.example.circlieprogress.CircleProgress
            android:id="@+id/circle_progress"
            app:max_progrss="100"
            app:outside_width="@dimen/outside_width"
            app:progress_width="@dimen/progress_width"
            app:progress_text_size="@dimen/progress_text_size"
            app:des_text_size="@dimen/des_text_size"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </LinearLayout>

</LinearLayout>